@model List<Person>

@if (Model != null && Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Title</th>
                <th>Hometown</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Person person in Model)
            {
                <tr>
                    <td>@person.Name</td>
                    <td>@person.Age</td>
                    <td>@person.Title</td>
                    <td>@person.Hometown</td>
                </tr>
            }
        </tbody>
    </table>    
}
else
{
    <div class="alert alert-info" role="alert">
        No any data found.
    </div>
    
}

<div class="row mb-3">
    <div class="col-2">
        <form method="post" asp-action="Index" asp-controller="Home">
            <button type="submit" class="btn btn-primary">Go Back</button>
        </form>
    </div>
    @if (Model != null && Model.Any())
    {
        <div class="col-2">
            <form method="post" asp-action="ClearData" asp-controller="Home">
                <button type="submit" class="btn btn-danger">Clear Data</button>
            </form>
        </div>
    }
</div>




